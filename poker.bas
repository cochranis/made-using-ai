10 REM *** POKER GAME ***
20 PRINT "WELCOME TO BASIC POKER!"
30 PRINT "------------------------"
40 DIM DECK(52), PLAYER(5), COMP(5), PLAYER_HAND(5), COMP_HAND(5)
50 FOR I=1 TO 52
60   DECK(I)=I
70 NEXT I
80 FOR I=1 TO 5
90   RANDOMIZE TIMER
100   PLAYER(I)=INT(RND*52)+1
110   COMP(I)=INT(RND*52)+1
120 NEXT I
130 FOR I=1 TO 5
140   PLAYER_HAND(I)=DECK(PLAYER(I))
150   COMP_HAND(I)=DECK(COMP(I))
160 NEXT I
170 PRINT "YOUR HAND:"
180 FOR I=1 TO 5
190   GOSUB 500
200 NEXT I
210 PRINT "------------------------"
220 INPUT "DISCARD HOW MANY CARDS? (0-5): ", DISCARD
230 IF DISCARD<0 OR DISCARD>5 THEN GOTO 220
240 IF DISCARD=0 THEN GOTO 280
250 FOR I=1 TO DISCARD
260   INPUT "ENTER POSITION OF CARD TO DISCARD (1-5): ", POS
270   PLAYER_HAND(POS)=0
280 PRINT "------------------------"
290 PRINT "COMPUTER'S HAND:"
300 FOR I=1 TO 5
310   GOSUB 600
320 NEXT I
330 PRINT "------------------------"
340 PRINT "YOUR NEW HAND:"
350 FOR I=1 TO 5
360   IF PLAYER_HAND(I)<>0 THEN GOSUB 500
370 NEXT I
380 PRINT "------------------------"
390 REM *** EVALUATE HANDS ***
400 GOSUB 700
410 PRINT "------------------------"
420 PRINT "THANKS FOR PLAYING!"
430 END

