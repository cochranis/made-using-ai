10 REM CHECKERS GAME
20 DIM BOARD(8,8)
30 LET TURN = 0
40 GOSUB 1000
50 PRINT "WELCOME TO BASIC CHECKERS!"
60 PRINT "PLAYERS: RED (R) VS BLACK (B)"
70 PRINT "INSTRUCTIONS: SELECT A PIECE TO MOVE BY ENTERING ITS COORDINATES, THEN ENTER THE DESTINATION COORDINATES"
80 PRINT "FOR EXAMPLE, TO MOVE PIECE AT (3,4) TO (4,5), ENTER '3 4 4 5' AND PRESS ENTER"
90 PRINT "LET'S BEGIN!"
100 PRINT "INITIAL BOARD:"
110 FOR I = 1 TO 8
120   FOR J = 1 TO 8
130     IF (I + J) MOD 2 = 0 THEN
140       BOARD(I, J) = " "
150     ELSE
160       IF I < 4 THEN
170         BOARD(I, J) = "R"
180       ELSEIF I > 5 THEN
190         BOARD(I, J) = "B"
200       ELSE
210         BOARD(I, J) = " "
220       ENDIF
230     ENDIF
240   NEXT J
250 NEXT I
260 GOSUB 4000
270 GOSUB 3000
280 PRINT "GAME STARTS: RED GOES FIRST"
290 GOSUB 2000
300 GOTO 5000
1000 REM SUBROUTINE TO DISPLAY THE BOARD
1010 PRINT "   1  2  3  4  5  6  7  8"
1020 PRINT "  ------------------------"
1030 FOR I = 1 TO 8
1040   PRINT I;"|";
1050   FOR J = 1 TO 8
1060     PRINT BOARD(I, J);" ";
1070   NEXT J
1080   PRINT "|"
1090 NEXT I
1100 PRINT "  ------------------------"
1110 RETURN
2000 REM SUBROUTINE TO HANDLE TURN
2010 IF TURN = 0 THEN
2020   PRINT "RED'S TURN (R)"
2030 ELSE
2040   PRINT "BLACK'S TURN (B)"
2050 ENDIF
2060 PRINT "ENTER COORDINATES OF THE PIECE TO MOVE (ROW COLUMN):";
2070 INPUT X1, Y1
2080 PRINT "ENTER DESTINATION COORDINATES (ROW COLUMN):";
2090 INPUT X2, Y2
2100 IF (X1 < 1 OR X1 > 8 OR Y1 < 1 OR Y1 > 8 OR X2 < 1 OR X2 > 8 OR Y2 < 1 OR Y2 > 8) THEN
2110   PRINT "INVALID COORDINATES. TRY AGAIN."
2120   GOSUB 2000
2130   RETURN
2140 ENDIF
2150 IF (TURN = 0 AND BOARD(X1, Y1) <> "R") OR (TURN = 1 AND BOARD(X1, Y1) <> "B") THEN
2160   PRINT "INVALID MOVE. TRY AGAIN."
2170   GOSUB 2000
2180   RETURN
2190 ENDIF
2200 IF (TURN = 0 AND X2 <= X1) OR (TURN = 1 AND X2 >= X1) THEN
2210   PRINT "INVALID MOVE. TRY AGAIN."
2220   GOSUB 2000
2230   RETURN
2240 ENDIF
2250 IF (ABS(X2 - X1) = 1 AND ABS(Y2 - Y1) = 1) THEN
2260   IF (BOARD(X2, Y2) <> " ") THEN
2270     PRINT "INVALID MOVE. TRY AGAIN."
2280     GOSUB 2000
2290     RETURN
2300   ELSE
2310     BOARD(X2, Y2) = BOARD(X1, Y1)
2320     BOARD(X1, Y1) = " "
2330     GOSUB 4000
2340     IF TURN = 0 THEN TURN = 1 ELSE TURN = 0
2350     RETURN
2360   ENDIF
2370 ELSE
2380   PRINT "INVALID MOVE. TRY AGAIN."
2390   GOSUB 2000
2400   RETURN
2410 ENDIF
3000 REM SUBROUTINE TO CHECK FOR WINNER
3010 LET RED_PIECES = 0
3020 LET BLACK_PIECES = 0
3030 FOR I = 1 TO 8
3040   FOR J = 1 TO 8
3050     IF BOARD(I, J) = "R" THEN RED_PIECES = RED_PIECES + 1
3060     IF BOARD(I, J) = "B" THEN BLACK_PIECES = BLACK_PIECES + 1
3070   NEXT J
3080 NEXT I
3090 IF RED_PIECES = 0 THEN
3100   PRINT "BLACK WINS!"
3110   END
3120 ENDIF
3130 IF BLACK_PIECES = 0 THEN
3140   PRINT "RED WINS!"
3150   END
3160 ENDIF
3170 RETURN
4000 REM SUBROUTINE TO DISPLAY THE BOARD
4010 PRINT "UPDATED BOARD:"
