4030   FOR J = 1 TO 8
4040     IF (I + J) MOD 2 = 0 THEN
4050       BOARD(I, J) = " "
4060     ELSE
4070       IF I < 4 THEN
4080         BOARD(I, J) = "R"
4090       ELSEIF I > 5 THEN
4100         BOARD(I, J) = "B"
4110       ENDIF
4120     ENDIF
4130   NEXT J
4140 NEXT I
4150 GOSUB 1000
4160 RETURN
